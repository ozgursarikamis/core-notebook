
@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ContactUs</h1>

<form method="POST">
	<fieldset>
		<div class="row">
			<div class="col-8 offset-2">
				<div class="form-group">
					<label for="ContactName">Contact Name</label>
					<input type="text" name="ContactName" id="ContactName" class="form-control" />
				</div>
			</div>
			
			<div class="col-8 offset-2">
				<div class="form-group">
					<label for="EMailAddress">Email Address</label>
					<input type="text" name="EMailAddress" id="EMailAddress" class="form-control" />
				</div>
			</div>
			
			<div class="col-4 offset-4">
				<div class="form-group">
					<input type="submit" value="Submit" class="btn btn-block btn-primary" />
				</div>
			</div>
		</div>
	</fieldset>
</form>

<h2 class="text-success">@Html.Raw(ViewBag.Message)</h2>